<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".DasturInfoFragment">

    <ImageView
        android:id="@+id/image_me"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/me"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_about_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Men Muhammadumar Codial - Zamonaviy kasblar akademiyasida Android dasturlash kursida o'qiyman. Hozirda 10 dan ortiq kichik dasturlarim mavjud.\n \nAloqa uchun:"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/image_me"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/instagram"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/instagram"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_about_me"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/telegram"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/telegram"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_about_me"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_about_me"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Siz ham shunday dastur yaratmoqchi bo'lsangiz:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instagram"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/codial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFC107"
        android:text="Bu yerga bosing!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>